<Window x:Class="Alp.Com.Igu.WpfMain.MainWindowView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alp.Com.Igu.WpfMain"
        mc:Ignorable="d"
        Title="MainWindowView2" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="369*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Grid Height="60" VerticalAlignment="Top" Background="#FF2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="▲" FontSize="20" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="ALPING" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="ITALIA" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Title -->
            <TextBlock Grid.Column="1" Text="AlpCO – Plate Cutting Optimization System" 
                      FontSize="16" Foreground="White" VerticalAlignment="Center" 
                      HorizontalAlignment="Center"/>

            <!-- Marcegaglia Logo -->
            <TextBlock Grid.Column="2" Text="⚡ MARCEGAGLIA" 
                      FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="20,0"/>

            <!-- Window Controls -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Content="—" Style="{StaticResource ModernButtonStyle}" Width="30" Height="30"/>
                <Button Content="✕" Style="{StaticResource ModernButtonStyle}" Width="30" Height="30" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Margin="0,60,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Plate View -->
            <Border Grid.Column="0" Background="#FF2D2D2D" Margin="20" CornerRadius="5">
                <Grid>
                    <TextBlock Text="Dati lamiera" FontSize="24" Foreground="White" 
                              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>

                    <!-- Plate Visualization -->
                    <Canvas Name="PlateCanvas" Background="#FF1E1E1E" Margin="20,60,20,200" 
                           ClipToBounds="True">
                        <!-- Main Plate Rectangle -->
                        <Rectangle Width="600" Height="300" Stroke="White" StrokeThickness="2" 
                                  Fill="Transparent" Canvas.Left="50" Canvas.Top="30"/>

                        <!-- Rounded corners -->
                        <Path Stroke="White" StrokeThickness="2" Fill="Transparent"
                              Data="M 50,50 Q 50,30 70,30 L 630,30 Q 650,30 650,50 L 650,310 Q 650,330 630,330 L 550,330 L 520,330 L 70,330 Q 50,330 50,310 Z"
                              Canvas.Left="0" Canvas.Top="0"/>

                        <!-- Section Lines -->
                        <Line X1="200" Y1="30" X2="200" Y2="330" Stroke="#FF666666" StrokeThickness="1" Canvas.Left="50" Canvas.Top="0"/>
                        <Line X1="400" Y1="30" X2="400" Y2="330" Stroke="#FF666666" StrokeThickness="1" Canvas.Left="50" Canvas.Top="0"/>

                        <!-- Section Labels -->
                        <TextBlock Text="L1" FontSize="36" Foreground="White" 
                                  Canvas.Left="100" Canvas.Top="150"/>
                        <TextBlock Text="L2" FontSize="36" Foreground="White" 
                                  Canvas.Left="300" Canvas.Top="150"/>
                        <TextBlock Text="L3" FontSize="36" Foreground="White" 
                                  Canvas.Left="500" Canvas.Top="150"/>

                        <!-- Dimension Labels -->
                        <TextBlock Text="X0" FontSize="12" Foreground="White" 
                                  Canvas.Left="40" Canvas.Top="350"/>
                        <TextBlock Text="X1" FontSize="12" Foreground="White" 
                                  Canvas.Left="90" Canvas.Top="350"/>
                        <TextBlock Text="X2" FontSize="12" Foreground="White" 
                                  Canvas.Left="240" Canvas.Top="350"/>
                        <TextBlock Text="X3" FontSize="12" Foreground="White" 
                                  Canvas.Left="440" Canvas.Top="350"/>
                        <TextBlock Text="X4" FontSize="12" Foreground="White" 
                                  Canvas.Left="640" Canvas.Top="350"/>

                        <TextBlock Text="Y0" FontSize="12" Foreground="White" 
                                  Canvas.Left="670" Canvas.Top="340"/>
                        <TextBlock Text="Y1" FontSize="12" Foreground="White" 
                                  Canvas.Left="670" Canvas.Top="20"/>

                        <!-- Dimension Lines -->
                        <Line X1="50" Y1="340" X2="650" Y2="340" Stroke="White" StrokeThickness="1"/>
                        <Line X1="660" Y1="30" X2="660" Y2="330" Stroke="White" StrokeThickness="1"/>
                    </Canvas>

                    <!-- Measurements Table -->
                    <Grid VerticalAlignment="Bottom" Margin="20,0,20,20" Height="150">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Width Data -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="LARGHEZZA UTILE" FontSize="12" Foreground="#FFAAAAAA" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Valori" FontSize="11" Foreground="#FFAAAAAA"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Distanza" FontSize="11" Foreground="#FFAAAAAA" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="X1 - X4" FontSize="12" Foreground="White"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="10000 cm" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <!-- Height Data -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="ALTEZZA UTILE" FontSize="12" Foreground="#FFAAAAAA" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Valori" FontSize="11" Foreground="#FFAAAAAA"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Distanza" FontSize="11" Foreground="#FFAAAAAA" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Y0 - Y1" FontSize="12" Foreground="White"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="10500 cm" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <!-- Conformità -->
                        <StackPanel Grid.Column="2" Margin="20,0,0,0">
                            <TextBlock Text="Conformità" FontSize="12" Foreground="#FFAAAAAA" Margin="0,0,0,10"/>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <Ellipse Width="12" Height="12" Fill="#FF4CAF50" VerticalAlignment="Center"/>
                                    <TextBlock Text="Dati inviati alla cesoia" FontSize="11" Foreground="White" 
                                              VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="12" Height="12" Fill="#FFF44336" VerticalAlignment="Center"/>
                                    <TextBlock Text="Destinazione della lamiera" FontSize="11" Foreground="White" 
                                              VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    <TextBlock Text="Placca" FontSize="11" Foreground="White" 
                                              VerticalAlignment="Center" Margin="20,0,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Button Content="Ok" Background="#FF4CAF50" Foreground="White" 
                                       Width="80" Height="35" BorderThickness="0" 
                                       Style="{StaticResource ModernButtonStyle}"/>
                                <Button Content="Scarta" Background="#FFF44336" Foreground="White" 
                                       Width="80" Height="35" BorderThickness="0" Margin="10,0,0,0"
                                       Style="{StaticResource ModernButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Panel - Profile Views -->
            <Border Grid.Column="1" Background="#FF2D2D2D" Margin="0,20,20,20" CornerRadius="5">
                <StackPanel Margin="20">
                    <!-- Measurements Table -->
                    <TextBlock Text="Vista superiore" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Headers -->
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Valore" FontSize="11" Foreground="#FFAAAAAA" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Posizione taglio" FontSize="11" Foreground="#FFAAAAAA" HorizontalAlignment="Right"/>

                        <!-- Values -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="X1" FontSize="12" Foreground="White"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="500 cm" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="X2" FontSize="12" Foreground="White"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="3500 cm" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="X3" FontSize="12" Foreground="White"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="8500 cm" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="X4" FontSize="12" Foreground="White"/>
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="10500 cm" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Profile Views -->
                    <TextBlock Text="Vista profili" FontSize="16" Foreground="White" Margin="0,20,0,15"/>

                    <!-- Profile 1 -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Profilo lato 1" FontSize="12" Foreground="#FFAAAAAA" Margin="0,0,0,10"/>
                        <Canvas Height="80" Background="#FF1E1E1E">
                            <Rectangle Width="250" Height="60" Stroke="White" StrokeThickness="1" 
                                      Fill="Transparent" Canvas.Left="10" Canvas.Top="10"/>
                            <Path Stroke="White" StrokeThickness="1" Fill="Transparent"
                                  Data="M 240,10 Q 260,10 260,30 L 260,50 Q 260,70 240,70"
                                  Canvas.Left="0" Canvas.Top="0"/>
                            <TextBlock Text="X0  X1" FontSize="10" Foreground="White" 
                                      Canvas.Left="220" Canvas.Top="75"/>
                        </Canvas>
                        <TextBlock Text="OMEGA" FontSize="11" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                        <TextBlock Text="X0 - X1                    10 cm" FontSize="11" Foreground="White"/>
                    </StackPanel>

                    <!-- Profile 2 -->
                    <StackPanel>
                        <TextBlock Text="Profilo lato 2" FontSize="12" Foreground="#FFAAAAAA" Margin="0,0,0,10"/>
                        <Canvas Height="80" Background="#FF1E1E1E">
                            <Rectangle Width="250" Height="60" Stroke="White" StrokeThickness="1" 
                                      Fill="Transparent" Canvas.Left="10" Canvas.Top="10"/>
                            <Path Stroke="White" StrokeThickness="1" Fill="Transparent"
                                  Data="M 240,10 Q 260,10 260,30 L 260,50 Q 260,70 240,70"
                                  Canvas.Left="0" Canvas.Top="0"/>
                            <TextBlock Text="X0  X1" FontSize="10" Foreground="White" 
                                      Canvas.Left="220" Canvas.Top="75"/>
                        </Canvas>
                        <TextBlock Text="OMEGA" FontSize="11" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                        <TextBlock Text="X0 - X1                    12 cm" FontSize="11" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Bottom Navigation -->
        <Grid Height="80" VerticalAlignment="Top" Background="#FF2D2D2D" Margin="0,354,0,0" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Style="{StaticResource ModernButtonStyle}" Width="80" Height="50" Margin="10">
                    <StackPanel>
                        <TextBlock Text="🏠" FontSize="16" HorizontalAlignment="Center"/>
                        <TextBlock Text="Home" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButtonStyle}" Width="80" Height="50" Margin="10">
                    <StackPanel>
                        <TextBlock Text="⚠" FontSize="16" HorizontalAlignment="Center"/>
                        <TextBlock Text="Allarmi" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButtonStyle}" Width="80" Height="50" Margin="10">
                    <StackPanel>
                        <TextBlock Text="⚙" FontSize="16" HorizontalAlignment="Center"/>
                        <TextBlock Text="Impostazioni" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Time Display -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0">
                <TextBlock Text="11:00 AM" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>
                <TextBlock Text="10/08/2025" FontSize="10" Foreground="#FFAAAAAA" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
