<UserControl x:Class="Alp.Com.Igu.WpfMain.ImpostazioniView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlpTlc.Pre.Igu.Views"
             xmlns:localConverters="clr-namespace:Alp.Com.Igu.Views.Converters"
             xmlns:viewModels="clr-namespace:Alp.Com.Igu.ViewModels;assembly=Alp.Com.Igu"
             xmlns:custCtrls="clr-namespace:Alp.Com.Igu.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="980" d:DesignWidth="1850">

    <!--<UserControl.DataContext>
        <viewModels:ImpostazioniViewModel/>
    </UserControl.DataContext>-->

    <UserControl.Resources>
        <localConverters:BoolToStringItaConverter x:Key="BoolToStringIta" />
        <localConverters:BoolToBrushConverter x:Key="BoolToBrush" />
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Comandi titolo-->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Comandi"
               Foreground="LightGray"
               FontSize="34"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               TextWrapping="Wrap"
               Padding="10,10,10,0"></TextBlock>

        <!--Comandi contenuto-->
        <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="0"  Text="Controllo remoto"
               Foreground="LightGray"
               FontSize="16"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               TextWrapping="Wrap"
               TextAlignment="Right"
               Padding="10,15"/>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" CornerRadius="10"   Margin="5,15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#262521" Offset="1"/>
                            <GradientStop Color="#666666" Offset="0.0"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel MaxWidth="300" Margin="10,15">

                        <Border CornerRadius="5" BorderThickness="3" BorderBrush="white" VerticalAlignment="Center" Margin="10">
                            <StackPanel>
                                <Button x:Name="btnAccendiIlluminatori" Background="Transparent" BorderBrush="Transparent"
                            Command="{Binding AccendiIlluminatoriCommand}" TouchUp="btnAccendiIlluminatori_TouchUp" >
                                    <TextBlock TextAlignment="Center" 
                                               Background="Transparent"
                                               Foreground="White"
                                               FontSize="20"
                                               TextWrapping="Wrap"
                                               Padding="5">
                                         Accendi illuminatori
                                    </TextBlock>
                                </Button>
                                <Popup Style="{StaticResource AnalisiPopup}" 
                       DataContext="{Binding EsitoAccensioneIlluminatori}">
                                    <ContentControl Style="{StaticResource AnalisiPopupContent}"/>
                                </Popup>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="5" BorderThickness="3" BorderBrush="white" VerticalAlignment="Center" Margin="10">
                            <StackPanel>
                                <Button x:Name="btnSpegniIlluminatori" Background="Transparent" BorderBrush="Transparent"
                            Command="{Binding SpegniIlluminatoriCommand}" TouchUp="btnSpegniIlluminatori_TouchUp" >
                                    <TextBlock TextAlignment="Center" 
                                               Background="Transparent"
                                               Foreground="White"
                                               FontSize="20"
                                               TextWrapping="Wrap"
                                               Padding="5">
                                     Spegni illuminatori
                                    </TextBlock>
                                </Button>
                                <Popup Style="{StaticResource AnalisiPopup}" 
                       DataContext="{Binding EsitoSpegnimentoIlluminatori}">
                                    <ContentControl Style="{StaticResource AnalisiPopupContent}"/>
                                </Popup>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="5" BorderThickness="3" BorderBrush="white" VerticalAlignment="Center" Margin="10">
                            <StackPanel>
                                <Button x:Name="btnResetTelecamere" Background="Transparent" BorderBrush="Transparent"
                            Command="{Binding ResetTelecamereCommand}" TouchUp="btnResetTelecamere_TouchUp" >
                                    <TextBlock TextAlignment="Center" 
                                               Background="Transparent"
                                               Foreground="White"
                                               FontSize="20"
                                               TextWrapping="Wrap"
                                               Padding="5">
                                        Reset telecamere
                                    </TextBlock>
                                </Button>
                                <Popup Style="{StaticResource AnalisiPopup}" 
                       DataContext="{Binding EsitoResetTelecamere}">
                                    <ContentControl Style="{StaticResource AnalisiPopupContent}"/>
                                </Popup>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>

            </Grid>
        </Grid>

        <!--Acquisizione titolo-->
        <TextBlock Grid.Row ="0" Grid.Column="1" Text="Acquisizione"
               Foreground="LightGray"
               FontSize="34"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               TextWrapping="Wrap"
               Padding="10,10,10,0">
        </TextBlock>

        <!--Acquisizione contenuto-->
        <Grid Grid.Row="1"  Grid.Column="1" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Modalità di acquisizione"
               Foreground="LightGray"
               FontSize="16"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               TextWrapping="Wrap"
               TextAlignment="Right"
               Padding="10,15">
            </TextBlock>

            <Border Grid.Row="1" Grid.Column="1" CornerRadius="10" Margin="5,15,5,30">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#262521" Offset="1"/>
                        <GradientStop Color="#666666" Offset="0.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal" 
                        VerticalAlignment="Stretch"
                        Margin="0,50">
                        <DockPanel VerticalAlignment="Center" Margin="0" HorizontalAlignment="Left">
                            <Label Content="Manuale" DockPanel.Dock="Left" Margin="0" Foreground="{Binding Path=ModalitaManuale, Converter={StaticResource BoolToBrush}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>
                            <ToggleButton 
                                IsChecked="{Binding ModalitaAutomatica}"
                                Width="50"
                                Height="25"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="0"
                                Style="{StaticResource TwoStatesToggleButton}" />
                            <Label Content="Automatica" DockPanel.Dock="Right" Margin="0" Foreground="{Binding Path=ModalitaAutomatica, Converter={StaticResource BoolToBrush}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>
                        </DockPanel>
                    </StackPanel>
                </Grid>

            </Border>

        </Grid>

        <!--Impostazioni telecamere titolo-->
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Impostazioni"
               Foreground="LightGray"
               FontSize="34"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               TextWrapping="Wrap"
               Padding="10,10,10,0">
        </TextBlock>

        <!--Impostazioni telecamere contenuto-->
        <Grid Grid.Row ="1" Grid.Column="2" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1"  Grid.Column="0" Text="Impostazioni telecamere"
                       Foreground="LightGray"
                       FontSize="16"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       TextWrapping="Wrap"
                       Padding="10,15"
                       TextAlignment="Right"/>

            <Border Grid.Row="1" Grid.Column="1"  CornerRadius="10" Margin="5,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#262521" Offset="1"/>
                        <GradientStop Color="#666666" Offset="0.0"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"  Grid.Column="0" Margin="10, 15"
                                Visibility="{Binding Path=MostraImpostazioniDiaPerEsperti, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Frequenza di acquisizione (immagini al secondo)"
                           Foreground="LightGray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Padding="10,0,15,10"/>
                    </StackPanel>

                    <DockPanel Grid.Row="0"  Grid.Column="1" 
                           VerticalAlignment="Center"  Margin="10,15"
                           Visibility="{Binding Path=MostraImpostazioniDiaPerEsperti, Converter={StaticResource BoolToVisibility}}"
                           IsEnabled="{Binding IsFreqAcquisizioneModificabile, Mode=OneWay}">
                        <TextBox Text="{Binding FreqAcquisizioneImmagini}" DockPanel.Dock="Right" TextAlignment="Center" Width="40" Margin="10" Padding="0,0,0,3" VerticalAlignment="Center" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
                        <StackPanel>
                            <Slider Name="sldFreqAcquisizioneImmagini" Value="{Binding FreqAcquisizioneImmagini}" Minimum="{Binding FreqAcquisizioneImmaginiMin}" Maximum="{Binding FreqAcquisizioneImmaginiMax}" TickPlacement="BottomRight"  TickFrequency="{Binding FreqAcquisizioneImmaginiTickFrequency}" IsSnapToTickEnabled="True" IsMoveToPointEnabled="True" Margin="10" Padding="0,3,0,0" VerticalAlignment="Bottom"/>
                            <Label Visibility="{Binding Path=IsFreqAcquisizioneNotModificabile, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}" Content="Durante l'acquisizione delle immagini non è possibile modificarla" Margin="10" Padding="0,0,0,3" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="LightGoldenrodYellow" Background="Transparent" BorderThickness="0" />
                        </StackPanel>
                    </DockPanel>

                    <TextBlock Grid.Row="1"  Grid.Column="0"  Text="Tempo di esposizione (ms)"
                           Visibility="{Binding Path=MostraImpostazioniDiaPerEsperti, Converter={StaticResource BoolToVisibility}}"
                           Foreground="LightGray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Padding="10,15"
                           Margin="10,15"/>

                    <Grid Grid.Row="1"  Grid.Column="1" VerticalAlignment="Center"  Margin="40,5,20,5" HorizontalAlignment="Stretch"
                          Visibility="{Binding Path=MostraImpostazioniDiaPerEsperti, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel  Grid.Column="0" VerticalAlignment="Center"  Margin="0,5,40,5" HorizontalAlignment="Stretch">
                            <Grid>
                                <!--https://www.codeproject.com/Articles/4044072/A-WPF-Rotary-Control-->
                                <custCtrls:RotaryControl Grid.ZIndex="0" 
                                    x:Name="rtcEsposizioneTlc1" Value="{Binding TempoEsposizioneMsTlc1, Mode=TwoWay}" 
                                    FontBrush="White" FontSize="14"
                                    Foreground="Black" Background="Transparent"
                                    MinimumValue="{Binding TempoEsposizioneMsMin, Mode=OneWay}"
                                    NumberOfMajorTicks="{Binding TempoEsposizioneMsNMajorTicks, Mode=OneWay}"
                                    MajorTickIncrement="{Binding TempoEsposizioneMsMajorTickIncrement, Mode=OneWay}"
                                    NumberOfMinorTicks="{Binding TempoEsposizioneMsNMinorTicks, Mode=OneWay}">
                                    <custCtrls:RotaryControl.MajorTickBrush>White</custCtrls:RotaryControl.MajorTickBrush>
                                    <custCtrls:RotaryControl.MinorTickBrush>White</custCtrls:RotaryControl.MinorTickBrush>
                                    <custCtrls:RotaryControl.OuterDialFill>gray</custCtrls:RotaryControl.OuterDialFill>
                                    <custCtrls:RotaryControl.OuterDialBorder>Transparent</custCtrls:RotaryControl.OuterDialBorder>
                                    <custCtrls:RotaryControl.OuterDialBorderThickness>1</custCtrls:RotaryControl.OuterDialBorderThickness>
                                    <custCtrls:RotaryControl.InnerDialRadius>60</custCtrls:RotaryControl.InnerDialRadius>
                                    <custCtrls:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#DDDDDD" Offset="0"/>
                                            <GradientStop Color="white" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </custCtrls:RotaryControl.PointerFill>
                                </custCtrls:RotaryControl>
                                <Label  Grid.ZIndex="1"  Content="TLC 1"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--<Label Content="{Binding TempoEsposizioneMsTlc1}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>-->
                            <Label Content="{Binding TempoEsposizioneMsTlc1}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center" Margin="20,0"/>
                        </DockPanel>
                        <DockPanel  Grid.Column="1" VerticalAlignment="Center"  Margin="0,15,40,20" HorizontalAlignment="Stretch">
                            <Grid>
                                <!--https://www.codeproject.com/Articles/4044072/A-WPF-Rotary-Control-->
                                <custCtrls:RotaryControl Grid.ZIndex="0" 
                                    x:Name="rtcEsposizioneTlc2" Value="{Binding TempoEsposizioneMsTlc2, Mode=TwoWay}"
                                    FontBrush="White" FontSize="14"
                                    Foreground="Black" Background="Transparent"
                                    MinimumValue="{Binding TempoEsposizioneMsMin, Mode=OneWay}"
                                    NumberOfMajorTicks="{Binding TempoEsposizioneMsNMajorTicks, Mode=OneWay}"
                                    MajorTickIncrement="{Binding TempoEsposizioneMsMajorTickIncrement, Mode=OneWay}"
                                    NumberOfMinorTicks="{Binding TempoEsposizioneMsNMinorTicks, Mode=OneWay}">
                                    <custCtrls:RotaryControl.MajorTickBrush>White</custCtrls:RotaryControl.MajorTickBrush>
                                    <custCtrls:RotaryControl.MinorTickBrush>White</custCtrls:RotaryControl.MinorTickBrush>
                                    <custCtrls:RotaryControl.OuterDialFill>gray</custCtrls:RotaryControl.OuterDialFill>
                                    <custCtrls:RotaryControl.OuterDialBorder>Transparent</custCtrls:RotaryControl.OuterDialBorder>
                                    <custCtrls:RotaryControl.OuterDialBorderThickness>1</custCtrls:RotaryControl.OuterDialBorderThickness>
                                    <custCtrls:RotaryControl.InnerDialRadius>60</custCtrls:RotaryControl.InnerDialRadius>
                                    <custCtrls:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#DDDDDD" Offset="0"/>
                                            <GradientStop Color="white" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </custCtrls:RotaryControl.PointerFill>
                                </custCtrls:RotaryControl>
                                <Label  Grid.ZIndex="1"  Content="TLC 2"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--<Label Content="{Binding TempoEsposizioneMsTlc2}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>-->
                            <Label Content="{Binding TempoEsposizioneMsTlc2}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center" Margin="20,0"/>
                        </DockPanel>
                    </Grid>

                    <TextBlock Grid.Row="2"  Grid.Column="0"  Text="Guadagno"
                               Foreground="LightGray"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               TextWrapping="Wrap"
                               Padding="10,15"
                               Margin="10,15"/>

                    <Grid Grid.Row="2"  Grid.Column="1" VerticalAlignment="Center"  Margin="40,0,20,0" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel  Grid.Column="0" VerticalAlignment="Center"  Margin="0,0,40,0" HorizontalAlignment="Stretch">

                            <Grid>
                                <!--https://www.codeproject.com/Articles/4044072/A-WPF-Rotary-Control-->
                                <custCtrls:RotaryControl Grid.ZIndex="0" 
                                    x:Name="rtcGuadagnoTlc1" Value="{Binding GuadagnoTlc1, Mode=TwoWay}" 
                                    FontBrush="White" FontSize="14"
                                    Foreground="Black" Background="Transparent"
                                    MinimumValue="{Binding GuadagnoMin, Mode=OneWay}"
                                    NumberOfMajorTicks="{Binding GuadagnoNMajorTicks, Mode=OneWay}"
                                    MajorTickIncrement="{Binding GuadagnoMajorTickIncrement, Mode=OneWay}"
                                    NumberOfMinorTicks="{Binding GuadagnoNMinorTicks, Mode=OneWay}">
                                    <custCtrls:RotaryControl.MajorTickBrush>White</custCtrls:RotaryControl.MajorTickBrush>
                                    <custCtrls:RotaryControl.MinorTickBrush>White</custCtrls:RotaryControl.MinorTickBrush>
                                    <custCtrls:RotaryControl.OuterDialFill>gray</custCtrls:RotaryControl.OuterDialFill>
                                    <custCtrls:RotaryControl.OuterDialBorder>Transparent</custCtrls:RotaryControl.OuterDialBorder>
                                    <custCtrls:RotaryControl.OuterDialBorderThickness>1</custCtrls:RotaryControl.OuterDialBorderThickness>
                                    <custCtrls:RotaryControl.InnerDialRadius>60</custCtrls:RotaryControl.InnerDialRadius>
                                    <custCtrls:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#DDDDDD" Offset="0"/>
                                            <GradientStop Color="white" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </custCtrls:RotaryControl.PointerFill>
                                </custCtrls:RotaryControl>
                                <Label  Grid.ZIndex="1"  Content="TLC 1"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--<Label Content="{Binding GuadagnoTlc1}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>-->
                            <Label Content="{Binding GuadagnoTlc1}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center" Margin="20,0"/>
                        </DockPanel>
                        <DockPanel  Grid.Column="1" VerticalAlignment="Center"  Margin="0,15,40,20" HorizontalAlignment="Stretch">
                            <Grid>
                                <!--https://www.codeproject.com/Articles/4044072/A-WPF-Rotary-Control-->
                                <custCtrls:RotaryControl Grid.ZIndex="0" 
                                    x:Name="rtcGuadagnoTlc2" Value="{Binding GuadagnoTlc2, Mode=TwoWay}"
                                    FontBrush="White" FontSize="14"
                                    Foreground="Black" Background="Transparent"
                                    MinimumValue="{Binding GuadagnoMin, Mode=OneWay}"
                                    NumberOfMajorTicks="{Binding GuadagnoNMajorTicks, Mode=OneWay}"
                                    MajorTickIncrement="{Binding GuadagnoMajorTickIncrement, Mode=OneWay}"
                                    NumberOfMinorTicks="{Binding GuadagnoNMinorTicks, Mode=OneWay}">
                                    <custCtrls:RotaryControl.MajorTickBrush>White</custCtrls:RotaryControl.MajorTickBrush>
                                    <custCtrls:RotaryControl.MinorTickBrush>White</custCtrls:RotaryControl.MinorTickBrush>
                                    <custCtrls:RotaryControl.OuterDialFill>gray</custCtrls:RotaryControl.OuterDialFill>
                                    <custCtrls:RotaryControl.OuterDialBorder>Transparent</custCtrls:RotaryControl.OuterDialBorder>
                                    <custCtrls:RotaryControl.OuterDialBorderThickness>1</custCtrls:RotaryControl.OuterDialBorderThickness>
                                    <custCtrls:RotaryControl.InnerDialRadius>60</custCtrls:RotaryControl.InnerDialRadius>
                                    <custCtrls:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#DDDDDD" Offset="0"/>
                                            <GradientStop Color="white" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </custCtrls:RotaryControl.PointerFill>
                                </custCtrls:RotaryControl>
                                <Label  Grid.ZIndex="1"  Content="TLC 2"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--<Label Content="{Binding GuadagnoTlc2}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center"/>-->
                            <Label Content="{Binding GuadagnoTlc2}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="White" Background="Transparent" BorderThickness="0"  VerticalContentAlignment="Center" Margin="20,0"/>
                        </DockPanel>
                    </Grid>

                </Grid>

            </Border>
        </Grid>


    </Grid>

</UserControl>
