<Page x:Class="Alp.Com.Igu.Views.AlarmsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alp.Com.Igu.Views"
      xmlns:localConverters="clr-namespace:Alp.Com.Igu.Views.Converters"
      xmlns:viewModels="clr-namespace:Alp.Com.Igu.ViewModels" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlarmsView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF1E1E1E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Allarmi" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>

            <Button Grid.Column="1" 
                    Content="Cancella" 
                    Background="#FFFF4757" 
                    Foreground="White" 
                    FontSize="14" 
                    Padding="20,8" 
                    Margin="20,10" 
                    BorderThickness="0" 
                    VerticalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Column Headers -->
        <Grid Grid.Row="1" Background="#FF3E3E42" Margin="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Timestamp" Foreground="White" FontWeight="SemiBold" 
                       VerticalAlignment="Center" Margin="15,0"/>
            <TextBlock Grid.Column="1" Text="Nome" Foreground="White" FontWeight="SemiBold" 
                       VerticalAlignment="Center" Margin="15,0"/>
            <TextBlock Grid.Column="2" Text="Messaggio" Foreground="White" FontWeight="SemiBold" 
                       VerticalAlignment="Center" Margin="15,0"/>
            <TextBlock Grid.Column="3" Text="Attivo" Foreground="White" FontWeight="SemiBold" 
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Alarms List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Alarm 1 -->
                <Border Background="#FF484848" Margin="0,1,0,0">
                    <Grid Height="35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="tbAlarmPlcConnTime" Grid.Column="0" Text="{Binding BIND_DATE_ALARM1}"
                                   Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="15,0"/>
                        <TextBlock Name="tbAlarmPlcConnName" Grid.Column="1" Text="Dati da Plc" 
                                   Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="15,0"/>
                        <TextBlock Name="tbAlarmPlcConnMsg" Grid.Column="2" Text="{Binding BIND_MSG_ALARM1}"
                                   Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="15,0"/>
                        <Ellipse Name="tbAlarmPlcConnIco" Grid.Column="3" Width="12" Height="12" 
                                 Fill="{Binding BIND_COLOR_ALARM1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Alarm 2 -->
                <Border Background="#FF404040" Margin="0,1,0,0">
                    <Grid Height="35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="tbAlarmPianoTaglioTime" Grid.Column="0" Text="{Binding BIND_DATE_ALARM2}"
                                   Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="15,0"/>
                        <TextBlock Name="tbAlarmPianoTaglioName" Grid.Column="1" Text="Dati piano di taglio" 
                                   Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="15,0"/>
                        <TextBlock Name="tbAlarmPianoTaglioMsg" Grid.Column="2" Text="{Binding BIND_MSG_ALARM2}" 
                                   Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="15,0"/>
                        <Ellipse Name="tbAlarmPianoTaglioIco" Grid.Column="3" Width="12" Height="12" 
                                 Fill="{Binding BIND_COLOR_ALARM2}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Empty rows for demonstration -->
                <Border Background="#FF3A3A3A" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF404040" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF3A3A3A" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF404040" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF3A3A3A" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF404040" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF3A3A3A" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>

                <Border Background="#FF404040" Margin="0,1,0,0">
                    <Grid Height="35"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
