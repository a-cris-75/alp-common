    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/PopupTheme.xaml"/>
                <ResourceDictionary Source="Theme/ToggleButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!--<DataTemplate DataType="{x:Type viewModels:AnalisiBilletteViewModel}" x:Shared="true">
                <views:AnalisiBilletteView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ImpostazioniViewModel}" x:Shared="true">
                <views:ImpostazioniView/>
            </DataTemplate>-->

            <!--Questo qua sopra non va bene perché crea una nuova istanza di AnalisiBilletteView o di ImpostazioniView
            ogni volta che si ricarica la pagina, nonostante x:Shared="true". Questo sotto invece va bene.-->
            
            <views:AnalisiBilletteView x:Key="AnalisiBilletteViewInstance" />
            <views:ImpostazioniView x:Key="ImpostazioniViewInstance" />

            <DataTemplate DataType="{x:Type viewModels:AnalisiBilletteViewModel}">
                <ContentPresenter Content="{StaticResource AnalisiBilletteViewInstance}" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ImpostazioniViewModel}">
                <ContentPresenter Content="{StaticResource ImpostazioniViewInstance}" />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>

